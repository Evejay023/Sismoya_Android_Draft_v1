<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Customer Details -->
        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name: Chrisha Dalmacio"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_contact_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No: 09348502443"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 102 Fairfield St. Brgy BI Cal City"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_pickup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Time: August 23, 2025 10:00AM"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Container Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_container"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/round_container"
                android:contentDescription="Container" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_container_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Round Container x1"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: 1"
                    android:textColor="@color/text_light"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount: 30"
                    android:textColor="@color/primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Payment Method -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method: Paypal"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- Place Order Button -->
        <Button
            android:id="@+id/btn_place_order"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/button_orange"
            android:backgroundTint="@null"
            android:text="Place Order"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</LinearLayout>