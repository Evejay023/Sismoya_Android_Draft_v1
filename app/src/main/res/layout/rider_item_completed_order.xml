<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Gallon Image -->
        <ImageView
            android:id="@+id/iv_gallon_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_slim_container"
            android:contentDescription="Gallon Image"/>

        <!-- Order Details - Simplified -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Customer Name -->
            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/roboto_bold"/>

            <!-- Address -->
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Address"
                android:textSize="13sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Delivery Time -->
            <TextView
                android:id="@+id/tv_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered: 11/04/25 12:45 AM"
                android:textSize="12sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_gallon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Slim Gallon"
                android:textSize="13sp"
                android:textColor="@color/text_dark"
                android:gravity="center"/>
            <!-- View Details -->
            <TextView
                android:id="@+id/tv_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textSize="12sp"
                android:textColor="@color/primary_blue"
                android:layout_marginTop="6dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>