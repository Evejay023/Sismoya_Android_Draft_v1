<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Container Image -->
        <ImageView
            android:id="@+id/iv_container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/round_container"
            android:contentDescription="Water Container"
            android:scaleType="centerInside" />

        <!-- Container Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_container_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: Round Container"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_container_liters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liters: 50"
                android:textColor="@color/text_light"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_container_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: 30.00"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_add_to_cart"
                    android:backgroundTint="@null"
                    android:text="ADD TO CART"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btn_order_now"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_order_now"
                    android:backgroundTint="@null"
                    android:text="ORDER NOW"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
