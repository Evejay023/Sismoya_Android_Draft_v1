<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Close Button -->
        <TextView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="âœ•"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp" />

        <!-- Container Image -->
        <ImageView
            android:id="@+id/iv_container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/img_round_container"
            android:contentDescription="Container" />

        <!-- Container Details -->
        <TextView
            android:id="@+id/tv_container_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Round Container"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_container_liters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liters: 50"
            android:textColor="@color/text_light"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_container_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 30.00"
            android:textColor="@color/primary_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Quantity Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background"
            android:text="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="16sp" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/button_orange"
            android:backgroundTint="@null"
            android:text="Next"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</LinearLayout>
