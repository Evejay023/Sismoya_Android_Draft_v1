<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_background"
    android:padding="16dp">

    <!-- ========== HEADER (FIXED - NOT SCROLLABLE) ========== -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sismoya Water"
                    android:textSize="23sp"
                    android:textColor="@color/primary_blue"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img_sismoya_logo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome,"
                        android:textSize="18sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/r_regular"/>

                    <TextView
                        android:id="@+id/tv_rider_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rider Name"
                        android:textSize="21sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="September 15, 2025"
                    android:textSize="11sp"
                    android:textColor="@color/text_dark"
                    android:background="@drawable/white_card_background"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/r_regular"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="11:00 AM"
                android:textSize="11sp"
                android:textColor="@color/text_dark"
                android:background="@drawable/white_card_background"
                android:padding="8dp"
                android:layout_gravity="end"
                android:textAlignment="center"
                android:fontFamily="@font/r_regular"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ========== TO PICK-UP (SCROLLABLE INSIDE) ========== -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#E3F2FD">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="To Pick-Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_empty_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No orders to pick-up."
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <!-- Scrollable RecyclerView with max 3 items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_dashboard_pickups"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ========== TO DELIVER (SCROLLABLE INSIDE) ========== -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#E3F2FD">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="To Deliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_empty_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No orders to deliver."
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <!-- Scrollable RecyclerView with max 3 items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_dashboard_deliveries"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>