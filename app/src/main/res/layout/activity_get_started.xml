<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Top Logo -->
    <ImageView
        android:id="@+id/iv_logo_top"
        android:layout_width="@dimen/logo_size_wid"
        android:layout_height="@dimen/logo_size_ht"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/logo_margin_top"
        android:src="@drawable/sismoya_logo"
        android:contentDescription="@string/app_name" />

    <!-- Main Title -->
    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xl"
        android:text="Clean, cold, and refreshing"
        android:textColor="@color/primary_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:text="water delivered to you"
        android:textColor="@color/primary_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_subtitle"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Safe and refreshing &quot;drinking water&quot; for your\nfamily and community"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:fontFamily="@font/r_regular"
        android:gravity="center"
        android:alpha="0.9" />

    <!-- Water Container Image -->
    <ImageView
        android:id="@+id/iv_water_container"
        android:layout_width="252dp"
        android:layout_height="252dp"
        android:layout_below="@id/tv_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/get_started_imahe"
        android:contentDescription="Water Container" />

    <!-- Get Started Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_orange"
        android:backgroundTint="@null"
        android:text="Get Started"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Copyright -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Â© 2025 Sismoya"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:fontFamily="@font/r_regular"
        android:alpha="0.7" />

</RelativeLayout>
