<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_dashboard.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/transparent">

                <!-- Company Logo and Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sismoya Water"
                        android:textSize="18sp"
                        android:textColor="@color/primary_blue"
                        android:textAlignment="center"
                        android:fontFamily="@font/roboto_bold"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/img_sismoya_logo"
                        android:contentDescription="Company Logo"/>
                </LinearLayout>

                <!-- Welcome Text and Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome,"
                            android:textSize="18sp"
                            android:textColor="@color/text_dark"
                            android:fontFamily="@font/r_regular"/>

                        <TextView
                            android:id="@+id/tv_rider_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chrisha Dalmacio"
                            android:textSize="21sp"
                            android:textColor="@color/text_dark"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="5dp"/>
                    </LinearLayout>

                    <!-- Date -->
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="September 15, 2025"
                        android:textSize="11sp"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/white_card_background"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/r_regular"/>
                </LinearLayout>

                <!-- Time -->
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="11:00 AM"
                    android:textSize="11sp"
                    android:textColor="@color/text_dark"
                    android:background="@drawable/white_card_background"
                    android:padding="8dp"
                    android:fontFamily="@font/r_regular"
                    android:layout_gravity="end"
                    android:textAlignment="center"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- To Pick-Up Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Pick-Up"
                    android:textSize="16sp"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Order Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/background_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Water Icon -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_slim_container"
                            android:contentDescription="Water Gallon"/>

                        <!-- Order Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chrisha Dalmacio"
                                android:textSize="14sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/roboto_bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11:00 AM"
                                android:textSize="12sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/r_regular"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="102 Natividad Street"
                                android:textSize="12sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/r_regular"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Details"
                                android:textSize="10sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/r_regular"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Action Button -->
                        <Button
                            android:id="@+id/btn_view_pickup_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all details"
                            android:textSize="10sp"
                            android:textColor="@color/background_white"
                            android:background="@drawable/button_primary"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Order Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/background_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Water Icon -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_mini_container"
                            android:contentDescription="Water Gallon"/>

                        <!-- Order Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Details"
                                android:textSize="10sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/r_regular"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- To Deliver Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Deliver"
                    android:textSize="16sp"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Order Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/background_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Water Icon -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_slim_container"
                            android:contentDescription="Water Gallon"/>

                        <!-- Order Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chrisha Dalmacio"
                                android:textSize="14sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/roboto_bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="09/06/2025"
                                android:textSize="12sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/r_regular"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="102 Natividad Street"
                                android:textSize="12sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/r_regular"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Details"
                                android:textSize="10sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/r_regular"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Action Button -->
                        <Button
                            android:id="@+id/btn_view_deliver_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all details"
                            android:textSize="10sp"
                            android:textColor="@color/background_white"
                            android:background="@drawable/button_primary"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Order Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/background_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Water Icon -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_slim_container"
                            android:contentDescription="Water Gallon"/>

                        <!-- Order Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Details"
                                android:textSize="10sp"
                                android:textColor="@color/primary_blue"
                                android:fontFamily="@font/r_regular"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>