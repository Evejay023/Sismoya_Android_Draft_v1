<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Water Icon -->
        <ImageView
            android:id="@+id/iv_water_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_slim_container"
            android:contentDescription="Water Gallon"/>

        <!-- Order Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chrisha Dalmacio"
                android:textSize="15sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="102 Natividad Street"
                android:textSize="13sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="@font/r_regular"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to_pickup"
                android:textSize="13sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="@font/r_regular"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textSize="11sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="@font/r_regular"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Action Button -->
        <Button
            android:id="@+id/btn_mark_picked_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as Picked-Up"
            android:textSize="10sp"
            android:textColor="@color/background_white"
            android:textAllCaps="false"
            android:background="@drawable/button_primary"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/roboto_bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
