<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_gallon_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/img_slim_container"
            android:contentDescription="gallon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Only show customer name and address -->
            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/roboto_bold" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="13sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- View Details link -->
            <TextView
                android:id="@+id/tv_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textSize="12sp"
                android:textColor="@color/primary_blue"
                android:layout_marginTop="6px"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Simple gallon name only -->
            <TextView
                android:id="@+id/tv_gallon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slim Gallon"
                android:textSize="13sp"
                android:textColor="@color/text_dark"
                android:gravity="center" />

            <!-- Mark button -->
            <Button
                android:id="@+id/btn_mark_picked_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/button_primary"
                android:textColor="@color/background_white"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>