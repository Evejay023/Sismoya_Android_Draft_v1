<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_background"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/logo_size_medium"
            android:layout_height="@dimen/logo_size_medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/img_sismoya_logo"
            android:contentDescription="@string/app_name" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Reset Password"
            android:textColor="@color/primary_blue"
            android:textSize="@dimen/text_size_display"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold" />

        <!-- Instruction Text -->
        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Enter your email address to receive a reset code"
            android:textAlignment="center"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:fontFamily="@font/r_regular" />

        <!-- Form Container -->
        <LinearLayout
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_instruction"
            android:layout_marginTop="@dimen/margin_large"
            android:orientation="vertical">

            <!-- Email -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/margin_medium"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="@dimen/padding_small"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/hint_color" />

            <!-- Reset Code -->
            <EditText
                android:id="@+id/et_reset_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/margin_medium"
                android:hint="6-Digit Reset Code"
                android:inputType="number"
                android:maxLength="6"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="@dimen/padding_small"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/hint_color"
                android:visibility="gone" />

            <!-- New Password -->
            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/margin_medium"
                android:hint="New Password"
                android:inputType="textPassword"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="@dimen/padding_small"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/hint_color"
                android:visibility="gone" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/margin_large"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="@dimen/padding_small"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/hint_color"
                android:visibility="gone" />

            <!-- Send Code Button -->
            <!-- Send Code Button -->
            <Button
                android:id="@+id/btn_send_code"
                style="@style/PrimaryButton"
                android:text="Send Reset Code"
                android:layout_marginBottom="@dimen/margin_medium" />

            <!-- Reset Password Button -->
            <Button
                android:id="@+id/btn_reset_password"
                style="@style/PrimaryButton"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="Reset Password"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:visibility="gone" />

            <!-- Back to Login -->
            <TextView
                android:id="@+id/tv_back_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Back to Login"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/r_medium"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/padding_small" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>